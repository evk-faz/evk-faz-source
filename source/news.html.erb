---
title: News
pageable: true
per_page: 10
layout: news
---

<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h2><%= link_to article.title, article %></h2> 
  <p><i class="icon-calendar"></i><%= article.date.strftime('%d.%m.%Y') %></p>
  <p><%= article.summary %> ...</p>
  <hr>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

